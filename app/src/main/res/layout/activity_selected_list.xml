<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@color/background_app"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectedList"
    android:orientation="vertical"
    android:weightSum="10">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="2">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="4">
        <ImageView
            android:onClick="back"
            android:layout_margin="5dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/ic_back"
            />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="4">
            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="3"/>

            <ImageView
                android:id="@+id/favorite"
                android:onClick="favorite"
                android:layout_margin="10dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@drawable/ic_star_border"
                />



        </LinearLayout>



    </LinearLayout>

    <TextView
        android:id="@+id/selectedListTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Başlık"
        android:textStyle="bold"
        android:fontFamily="@font/monkey"
        android:textColor="@color/bottom_menu_color"
        android:textSize="35sp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10"
        >

    <TextView
        android:id="@+id/date"
        android:textColor="#494949"
        android:layout_width="0dp"
        android:layout_weight="6"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:text="Last modified 11,2020"
        android:fontFamily="@font/monkey"
        android:textSize="15sp"
        android:layout_marginLeft="27dp"
        />
        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0.5"/>
        <Button
            android:onClick="update"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="3"
            android:text="güncelle"
            android:textSize="10sp"
            android:textColor="@color/black"
            android:fontFamily="@font/monkey"
            android:textStyle="bold"
            android:background="@drawable/button"
            android:theme="@style/Button.White"


            />
        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0.5"/>


    </LinearLayout>

    <LinearLayout
        android:layout_margin="25dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:orientation="vertical">
        <EditText
            android:id="@+id/editTextTextPersonName3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Liste"
            android:textColor="@color/bottom_menu_color"
            android:fontFamily="@font/monkey"
            android:textColorHint="#757575"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            android:layout_margin="10dp"

            />


    </LinearLayout>




</LinearLayout>